@model cstructor.website.Models.UserViewModel

@{
    ViewBag.Title = "ClassesForUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ClassesForUser</h2>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Classes</title>
</head>
<body>
    <h4>Classes</h4>
    <hr />
    <table cellpadding="0" cellspacing="0" border="1">
        <tr>
            <th>ClassName</th>
            <th>Description</th>
            <th>Price</th>

        </tr>
        @foreach (var cls in Model.Classes)
        {
            <tr>
                <td>@cls.Name</td>
                <td>@cls.Description</td>
                <td>@String.Format("{0:C}", @cls.Price)</td>
            </tr>
        }
    </table>
</body>
</html>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

